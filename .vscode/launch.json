{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "XDebug on docker",
        "type": "php",
        "request": "launch",
        "port": 9000, // php.iniで設定したxdebug用のport番号
        "pathMappings": {
            // {docker上のdocument root}:{ローカルのdocument root}
            "/var/www/html": "${workspaceFolder}"
        }
    }
  ]
}